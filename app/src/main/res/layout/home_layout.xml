<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.kt.views.ViewPagerSlide
        android:id="@+id/home_Viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/tab_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/compass_bg"/>
            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tab_color"
                android:text="@string/home"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/xing_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xing_bg"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/xing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tab_color"
                android:text="@string/菊花星"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rocket_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rocket_bg"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/rocket_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tab_color"
                android:text="@string/rocket"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/setting_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_bg"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/tab_color"
                android:text="@string/setting"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>